doctype 5
html(ng-app='pfcombat')
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/css/bootswatch.css')
    link(rel='stylesheet', href='/css/bootstrap-spinedit.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.5/angular.min.js')
    script(src='https://cdn.firebase.com/v0/firebase.js')
    script(src='https://cdn.firebase.com/libs/angularfire/0.3.0/angularfire.min.js')  
    script(src="/js/jquery-2.0.3.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/bootstrap-spinedit.js")
  body(ng-controller="userController")
    div.navbar
      div.navbar-inner
        a.brand(href='/') Pf Combat
        
        ul.nav
          li 
            a(href='/users') User Listing
          li
            a(href='/tabletop') Tabletop
    
    div.row-fluid
      div.span12
        span= id
      div.span12
        ul
          li(ng-repeat="user in monsters") {{user}}
            
  
    script
      var app = angular.module("pfcombat", ["firebase"]);
      
      function userController($scope, angularFire) {
        var ref = new Firebase("https://pfcombat.firebaseio.com/monsters");
        $scope.monsters = [];
        angularFire(ref, $scope, 'monsters');
      }
      
    
